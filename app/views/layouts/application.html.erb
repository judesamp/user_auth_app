<!DOCTYPE html>
<html>
<head>
  <title>UserAuthApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
  <body>
    <div class="top_container">
    <div class="top">
    <% if user_signed_in? %>
        <%= link_to('Logout', destroy_user_session_path, :method => :delete, class: "btn btn-default form-control") %>        
    <% else %>
      <%= link_to('Login', new_user_session_path, class: "btn btn-default form-control")  %>  
    <% end %>

    <% if flash[:notice] %>
      <div class="alert-message warning">
     <p><%= flash[:notice] %></p>
      </div>
    <% end %>

    <% if flash[:alert] %>
        <div class="alert-message error">
       <p><%= flash[:alert] %></p>
        </div>
    <% end %>
  </div>
</div>


<div class="container">
<%= yield %>
</div>

</body>
</html>
